---
import dayjs from 'dayjs';
import type { Social } from '~/types/social';
import { Container } from './Container';
import SocialLinks from './SocialLinks.astro';

interface Props {
  siteTitle: string;
  social?: Social | null;
}

const { siteTitle, social } = Astro.props;

const year = dayjs().format('YYYY');
---

<footer class="bg-zinc-950">
  <Container
    className="flex items-center justify-between py-4 text-sm text-background dark:text-foreground"
  >
    <div>
      &copy; {year}
      {siteTitle}
    </div>
    <div>{social && <SocialLinks links={social} />}</div>
  </Container>
</footer>
