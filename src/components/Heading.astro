---
import { cva } from "class-variance-authority";
import { cn } from "~/utils/misc";
import type { Block, Props as $ } from "astro-portabletext/types";

interface Props extends Partial<$<Block>> {
  level?: 1 | 2 | 3 | 4 | 5 | "p";
  className?: string;
}

const variants = cva("text-foreground font-bold [text-wrap:balance]", {
  variants: {
    variant: {
      1: "text-3xl md:text-5xl lg:text-6xl text-background",
      2: "text-5xl",
      3: "text-3xl",
      4: "text-xl",
      5: "text-base",
      p: "font-medium text-2xl text-accent",
    },
  },
  defaultVariants: {
    variant: 2,
  },
});

const { level, className, node } = Astro.props;

const el = level ?? node?.style ?? "p";

let Component: "h1" | "h2" | "h3" | "h4" | "h5" | "h6" | "p" = "p";

const classes = cn(
  variants({ variant: level ?? (el as Props["level"]) }),
  className
);

switch (el) {
  case "h1":
    Component = "h1";
    break;
  case "h2":
    Component = "h2";
    break;
  case "h3":
    Component = "h3";
    break;
  case "h4":
    Component = "h4";
    break;
  case "h5":
    Component = "h5";
    break;
  case "h6":
    Component = "h6";
    break;
  default:
    Component = "p";
    break;
}
---

<Component class={classes}><slot /></Component>
